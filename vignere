//creates a vignere cipher. 

#include <cs50.h>
#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>

int main(int argc, string argv[])
{
    //creating key string variable name
    string k = argv[1];
    ///////////////////////////////////////////////
    //checks if argument exist, and if its a word./
    //if not, must try again.                    //
    ///////////////////////////////////////////////
    if (argc != 2)
    {
        printf("What are you doing?! Gimme a word!\n");
        return 1;
    }
    
    for (int i = 0, n = strlen(k); i<n; i++)
    {
        if (!isalpha(k[i]))
        {
            printf("What are you doing?! Gimme a word!\n");
        return 1;
        }
    }
    printf("What phrase?: \n");
    string s = GetString();
    
  //////////////////////////////////////////////////////////////
  //loops through phrase and changes it with command line key//
  /////////////////////////////////////////////////////////////
    int j = 0;
    for (int i =0, n =strlen(s); i<n ; i++)
    {
        if (isalpha(s[i]))
        {
            if (isupper(s[i]))
            {
                printf("%c", (s[i] - 'A'+(k[j] -'A'))%26+'A');
                k++;
            }
            else 
            {
                printf("%c", (s[i] -'a' +(k[j] -'a'))%26+'a');
                k++;
            }
        }
        else
        {
            printf("%c", s[i]);
        }
    }
    printf("\n");
    return 0;
}
